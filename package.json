{
  "name": "buni-money-tracker-nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:comprehensive": "node scripts/run-tests.js",
    "test:unit": "jest __tests__/intelligentBudget.test.ts",
    "test:components": "jest __tests__/*.test.tsx",
    "test:integration": "jest __tests__/BudgetSettings.test.tsx",
    "test:performance": "jest --testTimeout=30000",
    "test:all": "npm run test:unit && npm run test:components && npm run test:integration && npm run test:performance",
    "css:build": "postcss app/globals.css -o app/styles/compiled.css",
    "css:watch": "postcss app/globals.css -o app/styles/compiled.css --watch",
    "css:optimize": "postcss app/globals.css -o app/styles/compiled.css --env production",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "performance:check": "npm run build && npm run lighthouse",
    "bundle:analyze": "npm run build && npx @next/bundle-analyzer",
    "optimize": "npm run css:optimize && npm run build"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "@upstash/redis": "^1.25.0",
    "autoprefixer": "^10.4.0",
    "bcryptjs": "^2.4.3",
    "cssnano": "^6.1.2",
    "dotenv": "^17.2.1",
    "jsonwebtoken": "^9.0.2",
    "next": "15.5.2",
    "postcss": "^8.4.0",
    "postcss-preset-env": "^9.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "recharts": "^2.15.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "eslint": "^8",
    "eslint-config-next": "15.5.2",
    "jest": "^30.1.2",
    "jest-environment-jsdom": "^30.1.2"
  }
}
